# Secret for guilde_lite_tdd_sprint
#
# IMPORTANT: Copy this file to secret.yaml and replace placeholder values
# before deploying to your cluster.
#
# DO NOT commit secret.yaml to version control!
#
# For production deployments, consider using:
# - HashiCorp Vault
# - AWS Secrets Manager
# - Azure Key Vault
# - Google Secret Manager
# - Sealed Secrets
# - External Secrets Operator
#
# Usage:
#   cp kubernetes/secret.yaml.example kubernetes/secret.yaml
#   # Edit secret.yaml with your actual values
#   kubectl apply -f kubernetes/secret.yaml
#
apiVersion: v1
kind: Secret
metadata:
  name: guilde_lite_tdd_sprint-secrets
  namespace: guilde_lite_tdd_sprint
  labels:
    app.kubernetes.io/name: guilde_lite_tdd_sprint
    app.kubernetes.io/component: backend
type: Opaque
stringData:
  # Application secret key for JWT signing
  # Generate with: openssl rand -hex 32
  SECRET_KEY: "<REPLACE_WITH_GENERATED_SECRET>"

  # API key for external service authentication
  API_KEY: "<REPLACE_WITH_API_KEY>"

  # PostgreSQL credentials
  POSTGRES_USER: "postgres"
  POSTGRES_PASSWORD: "<REPLACE_WITH_SECURE_PASSWORD>"

  # Redis password (leave empty if no auth required)
  REDIS_PASSWORD: ""

  # Observability tokens (optional)
  LOGFIRE_TOKEN: ""
  SENTRY_DSN: ""

  # LLM API keys (configure as needed)
  OPENAI_API_KEY: ""

  # OAuth credentials (if using Google auth)
  GOOGLE_CLIENT_ID: ""
  GOOGLE_CLIENT_SECRET: ""
